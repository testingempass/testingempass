<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_spash"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/m_score_28000"
            android:textColor="@color/sdk_tickcolor"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_spash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="/"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvTotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_spash"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/m_score_28000"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_playerBadge"
        android:layout_width="@dimen/sp_24"
        android:layout_height="@dimen/sp_24"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/sp_10"
        android:layout_marginTop="@dimen/sp_5"
        android:src="@drawable/novice_diamond_index" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sp_10"
        android:layout_marginTop="@dimen/sp_10"
        android:layout_toLeftOf="@+id/iv_playerBadge"
        android:singleLine="true"
        android:text="@string/m_level"
        android:textColor="@color/m_black_dark"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_below="@+id/iv_playerBadge"
        android:layout_marginBottom="@dimen/sp_5"
        android:layout_marginLeft="@dimen/sp_10"
        android:layout_marginRight="@dimen/sp_10"
        android:layout_marginTop="@dimen/sp_5"
        android:background="@drawable/m_shape_black_border_pro"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sp_1"
        android:paddingRight="@dimen/sp_1">

        <ProgressBar
            android:id="@+id/pb_novice"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_novice_progressbar"
            android:secondaryProgress="0" />

        <View
            android:layout_width="@dimen/sp_2"
            android:layout_height="@dimen/sp_10"
            android:background="@color/m_black_dark" />

        <ProgressBar
            android:id="@+id/pb_amature"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_amateue_progressbar"
            android:secondaryProgress="0" />

        <View
            android:layout_width="@dimen/sp_2"
            android:layout_height="@dimen/sp_10"
            android:background="@color/m_black_dark" />

        <ProgressBar
            android:id="@+id/pb_pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/pro_progressbar"
            android:secondaryProgress="0" />

        <View
            android:layout_width="@dimen/sp_2"
            android:layout_height="@dimen/sp_10"
            android:background="@color/m_black_dark" />

        <ProgressBar
            android:id="@+id/pb_champ"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_champ_progressbar"
            android:secondaryProgress="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_progress"
        android:layout_marginBottom="@dimen/sp_10"
        android:layout_marginLeft="@dimen/sp_10"
        android:layout_marginRight="@dimen/sp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/m_novice"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/amateur"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/m_pro"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/m_champ"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>
