<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sp_50"
    android:background="@color/header_color"
    android:orientation="vertical"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_49"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitleTextColor="#000"
        app:titleTextColor="#000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/header_color"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewback"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:onClick="onClickImageBack"
                    android:paddingLeft="@dimen/sp_10"
                    android:src="@drawable/ic_action_back" />

                <com.empass.sdk.customview.MobiTextView
                    android:id="@+id/mobiTextView_topHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/m_register"
                    android:textColor="@color/header_textcolor"
                    android:textSize="@dimen/sp_18" />

                <ImageView
                    android:id="@+id/imageViewPer"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:onClick="onClickPerformance"
                    android:paddingRight="@dimen/sp_10"
                    android:src="@drawable/performance_active_new"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/guest_btn_bg" />
</android.support.design.widget.AppBarLayout>


