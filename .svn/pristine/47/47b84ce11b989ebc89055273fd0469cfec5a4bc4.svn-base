<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/m_shape_white_rec"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_process"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/belogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_60"
            android:layout_centerHorizontal="true"
            android:src="@drawable/web_logo" />

        <View
            android:id="@+id/title_line"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/belogo"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/m_light_gray2" />

        <TextView
            android:id="@+id/tv_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_line"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/sp_10"
            android:gravity="center"
            android:text="@string/m_processing_request"
            android:textColor="@color/m_black_dark"
            android:textSize="@dimen/sp_15" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_processing"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/sp_10"
            android:gravity="center"
            android:text="@string/m_connecting_msg"
            android:textColor="@color/m_gray"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>