<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:layout_marginTop="@dimen/sp_5"
        android:background="@drawable/m_shape_black_border_pro"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sp_1"
        android:paddingRight="@dimen/sp_1">

        <ProgressBar
            android:id="@+id/pb_novice"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_novice_progressbar"
            android:secondaryProgress="0" />


        <ProgressBar
            android:id="@+id/pb_amature"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_amateue_progressbar"
            android:secondaryProgress="0"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb_pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/pro_progressbar"
            android:secondaryProgress="0"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/pb_champ"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/m_champ_progressbar"
            android:secondaryProgress="0"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
