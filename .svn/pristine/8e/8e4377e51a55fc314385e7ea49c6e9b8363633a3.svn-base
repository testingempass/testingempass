<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_8"
        android:layout_marginRight="@dimen/sp_8"
        android:layout_marginTop="@dimen/sp_8"
        app:cardElevation="@dimen/dp_4"
        card_view:contentPadding="-2dp">

        <RelativeLayout
            android:id="@+id/rl_skill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="#FFFFFF"
            android:clickable="true"
            android:onClick="onClickItem">

            <TextView
                android:id="@+id/tv_secquer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dp_2"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dp_2"
                android:text=""
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_skill_icon"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="@dimen/sp_20"
                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sp_2"
                android:layout_toRightOf="@+id/iv_skill_icon"
                android:paddingLeft="10dp"
                android:text="@string/m_java"
                android:textSize="@dimen/dp_18"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_skillid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sp_2"
                android:layout_toRightOf="@+id/iv_skill_icon"
                android:paddingLeft="10dp"
                android:text="@string/m_java"
                android:textSize="@dimen/dp_18"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_skill_subtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_skill"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_toRightOf="@+id/iv_skill_icon"
                android:paddingLeft="10dp"
                android:text="@string/m_java"
                android:textSize="@dimen/dp_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_comingsoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_2"
                android:text="@string/m_coming_soon"
                android:textSize="@dimen/dp_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/dp_5"
                android:src="@drawable/paid_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_coin"
                android:layout_marginRight="@dimen/sp_8"
                android:text="100"
                android:textColor="@color/sdk_tickcolor"
                android:textSize="@dimen/dp_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_5"
                android:src="@drawable/lock"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>